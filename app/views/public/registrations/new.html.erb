<div class='container'>
  <div class='row'>
    <div class='col-5 mx-auto'>      
      <h2 class="my-5">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :last_name, "名前" %>
          <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %>
          <%= f.text_field :first_name, autofocus: true, placeholder: "名" %>
        </div>
      
        <div class="field">
          <%= f.label :last_kana_name, "フリガナ" %>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %>
        </div>
      
        <div class="field">
          <%= f.label :last_kana_name, "ログイン表示名" %>
          <%= f.text_field :login_name, autofocus: true, placeholder: "ログイン名" %>
        </div>
      
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@mail.com" %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions mt-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <p class="mt-5">すでに登録ずみの方は</p>
      <p><%= link_to "こちら", new_end_user_session_path %>からログインしてください</p>
     </div>
  </div>
</div>