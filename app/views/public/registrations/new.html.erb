<div class='container'>
  <div class='row'>
    <div class='col-5 mx-auto'>      
      <h2 class="my-5">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-row">
          <div class="form-group col-md-12">
            <p>名前</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :last_name, autofocus: true, placeholder: "姓 20文字まで", class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :first_name, autofocus: true, placeholder: "名 20文字まで", class: "form-control" %>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group col-md-12">
            <p>フリガナ</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ 20文字まで", class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ 20文字まで", class: "form-control" %>
          </div>
        </div>
      
        <div class="form-row">
          <div class="form-group col-md-12">
            <p>ログイン名(2文字以上20文字以内)</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :login_name, autofocus: true, placeholder: "ログイン名", class: "form-control" %>
          </div>
        </div>
    
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@mail.com", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="actions mt-3">
          <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
      
      <p class="mt-5">すでに登録ずみの方は</p>
      <p><%= link_to "こちら", new_end_user_session_path %>からログインしてください</p>
     </div>
  </div>
</div>