<% if recruitment.favorited_by?(current_end_user) %>
  <p>
    <%= link_to recruitment_favorites_path(recruitment), method: :delete, remote: true, class:"text-danger" do %>
      <i class="fas fa-heart"></i><%= recruitment.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to recruitment_favorites_path(recruitment), method: :post, remote: true do %>
      <i class="fas fa-heart"></i><%= recruitment.favorites.count %>
    <% end %>
  </p>
<% end %>