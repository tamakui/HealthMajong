<h1>検索結果</h1>
<% unless params[:word] == "" && params[:search] == "perfect_match" %>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがEndUserのとき-->
  <% if @range == "EndUser" %>
    <tbody>
      <% @end_users.each do |end_user| %>
        <tr>
          <td><%= end_user.login_name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "MahjongHand" %>
  <!--検索対象モデルがMahjongHandのとき-->
    <tbody>
      <% @mahjong_hands.each do |mahjong_hand| %>
        <tr>
          <td><%= mahjong_hand.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <!--検索対象モデルがGenreのとき-->
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
<% end %>
















<% if @model == 'user' %>
	<h3>Users search for "<%= @content %>"</h3>
  <%= render 'users/index', users: @records %>
<% elsif @model == 'book' %>
	<h3>Books search for "<%= @content %>"</h3>
  <%= render 'books/index', books: @records %>
<% end %>