<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h1>会員情報編集</h1>
      <%= form_with model: @end_user,url: end_users_information_path, local: true do |f| %>
        <div class='field'>
          <h1>名前</h1>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class='field'>
          <h1>フリガナ</h1>
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        <div class='field'>
          <h1>ログイン後表示名</h1>
            <%= f.text_field :login_name, autofocus: true %>
        </div>
        <div class='field'>
          <h1>メールアドレス</h1>
            <%= f.email_field :email, autofocus: true %>
        </div>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to '退会する', end_users_unsubscribe_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
