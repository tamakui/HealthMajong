<div class='container'>
  <div class='row'>
    <div class='col-5 mx-auto'>
      <h1 class="my-5">会員情報編集</h1>
      <%= form_with model: @end_user,url: end_users_information_update_path(@end_user), local: true do |f| %>
        <div class='form-row'>
          <div class="form-group col-md-12">
            <p>新しいプロフィール画像を登録する際はこちらから</p>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div class='form-row'>
          <div class="form-group col-md-12">
            <p>現在設定しているプロフィール画像</p>
            <%= image_tag @end_user.profile_image, size:'100x100' %>
          </div>
        </div>
        <div class='form-row'>
          <div class="form-group col-md-12">
            <p>名前(姓、名 20文字まで)</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class='form-row'>
          <div class="form-group col-md-12">
            <p>フリガナ(セイ、メイ 20文字まで)</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <p>ログイン名(2文字以上20文字以内)</p>
          </div>
          <div class="form-group col-md-6">
            <%= f.text_field :login_name, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-group col-md-12">
            <p>自己紹介文</p>
          </div>
          <div class="form-group">
            <%= f.text_field :introduction, autofocus: true, placeholder: "100文字まで", class: "form-control" %>
          </div>
        </div>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to '退会する', end_users_unsubscribe_path, class: "btn btn-danger" %>
      <% end %>
      <div class ='mail_password mt-5'>
        <p>メールアドレス、パスワードの変更をしたい方は</p><br>
        <p><%= link_to 'こちら', edit_end_user_registration_path %>から</p>
      </div>
    </div>
  </div>
</div> 