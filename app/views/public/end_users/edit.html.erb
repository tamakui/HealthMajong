<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h1>会員情報編集</h1>
      <%= form_with model: @end_user,url: end_users_information_path, local: true do |f| %>
        <div class='field'>
          <h1>プロフィール画像</h1>
            <%= f.file_field :profile_image,placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class='field'>
          <h1>名前</h1>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class='field'>
          <h1>フリガナ</h1>
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
        <div class='field'>
          <h1>ログイン後表示名</h1>
            <%= f.text_field :login_name, autofocus: true %>
        </div>
        <div class='field'>
          <h1>自己紹介文</h1>
            <%= f.text_field :introduction, autofocus: true %>
        </div>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to '退会する', end_users_unsubscribe_path, class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>

<div class ='mail_password'>
  <p>メールアドレス、パスワードの変更をしたい方は</p><br>
  <p><%= link_to 'こちら', edit_end_user_registration_path %>から</p>
</div>