<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ログイン</h2>
      <p>会員の方はこちらからログイン</p>
    </div>
    <div class='col-md-5'>
      <body class='text-center'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@mail.com" %>
          </div>
  
          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
          </div>
  
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
  
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        <% end %>
  
        <%= render "public/shared/links" %>
      </body>
    </div>
  </div>
</div>