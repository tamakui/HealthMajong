<div class='container'>
  <div class='row'>
    <div class='col-5 mx-auto'>
      <h2 class="my-5">ログイン</h2>
      <p class="mb-4">会員の方はこちらからログイン</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@mail.com", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-info btn-lg btn-block" %>
        </div>
      <% end %>

      <p class="mt-5">まだ会員登録がお済みでない方は</p>
      <p><%= link_to "こちら", new_end_user_registration_path %>から新規登録してください</p>

    </div>  
  </div>
</div>