<h1>役新規登録</h1>

<%= form_with model:@mahjong_hand, url: admin_mahjong_hands_path, method: :post, local:true do |f| %>
  <div class="form-group">
    <%= f.label :"役画像" %>
    <%= f.file_field :image, accept:"image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :"役名" %>
    <%= f.text_field :name, placeholder: "九蓮宝燈" %>
  </div>
  <div class="form-group">
    <%= f.label :"役説明" %>
    <%= f.text_field :describe, placeholder: "「1112345678999+同種の数牌1枚」という形の清一色（チンイツ）を門前でアガると成立する役満です。" %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>