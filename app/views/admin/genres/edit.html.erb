<div class="container px-5 px-sm-0">
  <div class='row'>
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>ジャンル編集</h1>
      <div>
        <%= form_with model: @genre, url: admin_genre_path, class: "genre_edit_form", local:true do |f| %>
          <div class="form-group">
            <%= f.label :"ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
            <%= link_to "削除する", admin_genre_path(@genre.id), method: :delete, class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>