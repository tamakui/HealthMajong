<div class="container px-5 px-sm-0">
  <div class='row'>
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>ジャンル一覧・追加</h1>
      <div>
        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :"ジャンル名" %>
            <%= f.text_field :name, placeholder: "ジャンル名" %>
            <%= f.submit '新規登録', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
      
      <table>
        <thead>
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>