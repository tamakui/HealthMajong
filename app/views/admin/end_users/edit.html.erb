<div class='container'>
  <div class='row'>
    <div class='col'>
      <h1 class="mb-3"><%= @end_user.login_name %>さんの会員情報編集</h1>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <table>
        <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @end_user.id %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
  <div>
    <%= form_with model: @end_user, url: admin_end_user_path, local: true do |f| %>
      <%= image_tag @end_user.profile_image, size:'100x100' %>
      <div class='form-row'>  
        <div class="form-group col-md-12">
          <p>名前</p>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class='form-row'>  
        <div class="form-group col-md-12">
          <p>フリガナ</p>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
        </div>
      </div>  
      <div class="form-row">
        <div class="form-group col-md-12">
          <p>ログイン名</p>
        </div>
        <div class="form-group col-md-6">
          <%= f.text_field :login_name, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group col-md-12">
          <p>メールアドレス</p>
        </div>
        <div class="form-group">
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div>
        <%= f.label :"会員ステータス" %>
        <%= f.radio_button :is_deleted, false, checked: true %><%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会" %>
      </div>
      <div>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>  
      
      
      
      
      
     