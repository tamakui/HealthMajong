<div class="container px-5 px-sm-0">
  <div class='row'>
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>会員一覧</h1>
    </div>
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class='table table-hover'>
        <thead class="table-active">
          <tr>
            <th>会員ID</th>
            <th>ログイン名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td><%= link_to end_user.login_name, admin_end_user_path(end_user), class: "text-dark font-weight-bold" %></td>
            <td><%= end_user.email %></td>
            <% if end_user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-muted">退会</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>