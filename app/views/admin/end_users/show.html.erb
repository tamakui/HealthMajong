<div class='container'>
  <div class='row'>
      <div class='col'>
        <h1 class="mb-3"><%= @end_user.login_name %>さんの会員詳細</h1>
        <table>
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @end_user.id %></td>
            </tr>
            <tr>
              <td>プロフィール画像</td>
              <td><%= image_tag @end_user.get_profile_image(100, 100), size:'100x100' %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= @end_user.last_name_kana %><%= @end_user.first_name_kana %></td>
            </tr>
            <tr>
              <td>ログイン名</td>
              <td><%= @end_user.login_name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @end_user.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @end_user.is_deleted == false %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="text-muted">退会</strong>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= link_to "編集する", edit_admin_end_user_path, class:"btn btn-success ml-4" %>
        <%= link_to "コメント一覧を見る", admin_top_path, class:"btn btn-primary ml-4" %>
      </div>
  </div>
</div>